@model Publications.Models.ViewModels.SavePublicationVM

@{
    ViewData["Title"] = "AddPublication";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>AddPublication</h2>

<form asp-action="AddPublication">
    <div class="form-horizontal">
        <h4>SavePublicationVM</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Title" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TemplateId" class="col-md-2 control-label"></label>
            <div class="col-md-10" id="TemplateList">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Utwórz" class="btn btn-default" id="Createbtn" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script type="text/javascript">
$(document).ready(function () {
            $.ajax({
            url: "@Url.Action("ShowTemplatesList")",
            type: "GET",
            success: function (response) {
            $("#TemplateList").html(response);
            }
            });
})
    $("#Createbtn").click(function () {
        $.ajax({
            url: "@Url.Action("ShowTemplatesList")",
