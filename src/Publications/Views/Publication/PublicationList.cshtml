@model IEnumerable<Publications.Models.ViewModels.PublicationVM>

@{
    ViewData["Title"] = "PublicationList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PublicationList</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="publications" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                <a asp-action="Details" asp-route-publicationId="@item.Id" data-toggle="tooltip" data-placement="top" title="Szczegóły"><span class="glyphicon glyphicon-edit glyph-button"></span></a>&nbsp;&nbsp;
            </td>
        </tr>
}
    </tbody>
</table>
@*<script src="~/lib/datatable/datatables.min.js"></script>*@
<script>
       $(document).ready(function () {
           $("#publications").DataTable();
       });
</script>
